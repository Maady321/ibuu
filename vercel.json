{
  "version": 2,
  "env": {
    "ENVIRONMENT": "production",
    "PYTHONUNBUFFERED": "1"
  },
  "functions": {
    "api/*.py": {
      "maxDuration": 15
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/api",
      "destination": "/api/index.py"
    }
  ]
}