{
  "buildCommand": "pip install -r requirements.txt && pip install -r Backend/requirements.txt",
  "outputDirectory": "Frontend",
  "framework": "vanilla",
  "trailingSlash": false,
  "env": {
    "ENVIRONMENT": "production",
    "PYTHONUNBUFFERED": "1"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/api$",
      "dest": "/api/index.py",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/",
      "dest": "/index.html"
    }
  ]
}